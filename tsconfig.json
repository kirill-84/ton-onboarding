{
    "compilerOptions": {
        "target": "ES2022",
        "outDir": "dist",
        "module": "esnext",
        "moduleResolution": "node",
        "declaration": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "rootDir": "./"
    },
    "include": ["scripts/**/*", "lib/**/*"],
    "exclude": ["node_modules"]
    /*"ts-node": {
        "esm": true // Включение поддержки ESM в ts-node
    }*/
}
